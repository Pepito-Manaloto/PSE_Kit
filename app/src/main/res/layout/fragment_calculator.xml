<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <View
            android:id="@+id/top_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/label_buy_price"
            style="@style/Calculator"
            android:layout_alignBaseline="@+id/edittext_buy_price"
            android:layout_below="@id/top_margin"
            android:layout_marginBottom="14dp"
            android:text="@string/calculator_buy_price"/>

        <EditText
            android:id="@id/edittext_buy_price"
            style="@style/Calculator.EditText"
            android:layout_below="@id/top_margin"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@id/label_buy_price"
            android:layout_toRightOf="@id/label_buy_price"
            android:width="90dp"
            android:inputType="numberDecimal"
            android:maxLength="@integer/calculator_buy_price_max_length"/>

        <View
            android:id="@+id/calc_divider1"
            style="@style/Divider2"
            android:layout_below="@id/label_buy_price"/>

        <TextView
            android:id="@+id/label_shares"
            style="@style/Calculator"
            android:layout_alignBaseline="@+id/edittext_shares"
            android:layout_below="@id/calc_divider1"
            android:layout_marginBottom="14dp"
            android:text="@string/calculator_shares"/>

        <EditText
            android:id="@id/edittext_shares"
            style="@style/Calculator.EditText"
            android:layout_below="@id/calc_divider1"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp"
            android:layout_toEndOf="@id/label_shares"
            android:layout_toRightOf="@id/label_shares"
            android:width="150dp"
            android:inputType="number"
            android:maxLength="@integer/calculator_shares_max_length"/>

        <View
            android:id="@+id/calc_divider2"
            style="@style/Divider2"
            android:layout_below="@id/label_shares"/>

        <TextView
            android:id="@+id/label_average_price"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider2"
            android:text="@string/calculator_average_price"/>

        <TextView
            android:id="@+id/textview_average_price"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider2"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_toEndOf="@id/label_average_price"
            android:layout_toRightOf="@id/label_average_price"
            android:text="@string/default_value"/>

        <View
            android:id="@+id/calc_divider3"
            style="@style/Divider2"
            android:layout_below="@id/label_average_price"/>

        <TextView
            android:id="@+id/label_break_even_price"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider3"
            android:text="@string/calculator_price_to_break_even"/>

        <TextView
            android:id="@+id/textview_break_even_price"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider3"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/label_break_even_price"
            android:layout_toRightOf="@id/label_break_even_price"
            android:text="@string/default_value"/>

        <View
            android:id="@+id/calc_divider4"
            style="@style/Divider2"
            android:layout_below="@id/label_break_even_price"/>

        <TextView
            android:id="@+id/label_buy_gross_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider4"
            android:text="@string/calculator_buy_gross_amount"/>

        <TextView
            android:id="@+id/textview_buy_gross_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider4"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/label_buy_gross_amount"
            android:layout_toRightOf="@id/label_buy_gross_amount"
            android:text="@string/default_value"/>

        <View
            android:id="@+id/calc_divider5"
            style="@style/Divider2"
            android:layout_below="@id/label_buy_gross_amount"/>

        <TextView
            android:id="@+id/label_buy_net_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider5"
            android:layout_marginBottom="10dp"
            android:text="@string/calculator_buy_net_amount"/>

        <TextView
            android:id="@+id/textview_buy_net_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider5"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@id/label_buy_net_amount"
            android:layout_toRightOf="@id/label_buy_net_amount"
            android:text="@string/default_value"/>

        <ImageView
            android:id="@+id/imageview_buy_net_amount"
            style="@style/Calculator_ImageView"
            android:layout_below="@id/calc_divider5"
            android:layout_alignTop="@id/calc_divider5"
            android:layout_toRightOf="@+id/textview_buy_net_amount"
            android:layout_toEndOf="@+id/textview_buy_net_amount"/>

<!-- ======================================================== -->
        <TextView
            android:id="@+id/label_addt_brokers_commission"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_buy_net_amount"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_brokers_commission"/>

        <TextView
            android:id="@+id/textview_addt_brokers_commission"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_buy_net_amount"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@id/label_addt_brokers_commission"
            android:layout_toRightOf="@id/label_addt_brokers_commission"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_addt_clearing_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_addt_brokers_commission"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_clearing_fee"/>

        <TextView
            android:id="@+id/textview_addt_clearing_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_addt_brokers_commission"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:layout_toEndOf="@id/label_addt_clearing_fee"
            android:layout_toRightOf="@id/label_addt_clearing_fee"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_addt_transaction_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_addt_clearing_fee"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_transaction_fee"/>

        <TextView
            android:id="@+id/textview_addt_transaction_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_addt_clearing_fee"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_toEndOf="@id/label_addt_transaction_fee"
            android:layout_toRightOf="@id/label_addt_transaction_fee"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_addt_total"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_addt_transaction_fee"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_total"/>

        <TextView
            android:id="@+id/textview_addt_total"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_addt_transaction_fee"
            android:layout_marginLeft="126dp"
            android:layout_marginStart="126dp"
            android:layout_toEndOf="@id/label_addt_total"
            android:layout_toRightOf="@id/label_addt_total"
            android:visibility="invisible"
            android:text="@string/default_value"/>

<!-- ======================================================== -->

        <View
            android:id="@+id/calc_divider6"
            style="@style/Divider2"
            android:layout_below="@id/label_addt_total"/>

        <TextView
            android:id="@+id/label_sell_price"
            style="@style/Calculator"
            android:layout_alignBaseline="@+id/edittext_sell_price"
            android:layout_below="@id/calc_divider6"
            android:layout_marginBottom="14dp"
            android:text="@string/calculator_sell_price"/>

        <EditText
            android:id="@id/edittext_sell_price"
            style="@style/Calculator.EditText"
            android:layout_below="@id/calc_divider6"
            android:layout_marginLeft="91dp"
            android:layout_marginStart="91dp"
            android:layout_toEndOf="@id/label_sell_price"
            android:layout_toRightOf="@id/label_sell_price"
            android:width="90dp"
            android:inputType="numberDecimal"
            android:maxLength="@integer/calculator_sell_price_max_length"/>

        <View
            android:id="@+id/calc_divider7"
            style="@style/Divider2"
            android:layout_below="@id/label_sell_price"/>

        <TextView
            android:id="@+id/label_sell_gross_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider7"
            android:text="@string/calculator_sell_gross_amount"/>

        <TextView
            android:id="@+id/textview_sell_gross_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider7"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@id/label_sell_gross_amount"
            android:layout_toRightOf="@id/label_sell_gross_amount"
            android:text="@string/default_value"/>

        <View
            android:id="@+id/calc_divider8"
            style="@style/Divider2"
            android:layout_below="@id/label_sell_gross_amount"/>

        <TextView
            android:id="@+id/label_sell_net_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider8"
            android:text="@string/calculator_sell_net_amount"/>

        <TextView
            android:id="@+id/textview_sell_net_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider8"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_toEndOf="@id/label_sell_net_amount"
            android:layout_toRightOf="@id/label_sell_net_amount"
            android:text="@string/default_value"/>

        <ImageView
            android:id="@+id/imageview_sell_net_amount"
            style="@style/Calculator_ImageView"
            android:layout_below="@id/calc_divider8"
            android:layout_alignTop="@id/calc_divider8"
            android:layout_toRightOf="@+id/textview_sell_net_amount"
            android:layout_toEndOf="@+id/textview_sell_net_amount"/>

<!-- ======================================================== -->
        <TextView
            android:id="@+id/label_deduct_brokers_commission"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_sell_net_amount"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_brokers_commission"/>

        <TextView
            android:id="@+id/textview_deduct_brokers_commission"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_sell_net_amount"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@id/label_deduct_brokers_commission"
            android:layout_toRightOf="@id/label_deduct_brokers_commission"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_deduct_clearing_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_brokers_commission"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_clearing_fee"/>

        <TextView
            android:id="@+id/textview_deduct_clearing_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_brokers_commission"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:layout_toEndOf="@id/label_deduct_clearing_fee"
            android:layout_toRightOf="@id/label_deduct_clearing_fee"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_deduct_transaction_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_clearing_fee"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_transaction_fee"/>

        <TextView
            android:id="@+id/textview_deduct_transaction_fee"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_clearing_fee"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_toEndOf="@id/label_deduct_transaction_fee"
            android:layout_toRightOf="@id/label_deduct_transaction_fee"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_deduct_sales_tax"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_transaction_fee"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_total"/>

        <TextView
            android:id="@+id/textview_deduct_sales_tax"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_transaction_fee"
            android:layout_marginLeft="126dp"
            android:layout_marginStart="126dp"
            android:layout_toEndOf="@id/label_deduct_sales_tax"
            android:layout_toRightOf="@id/label_deduct_sales_tax"
            android:visibility="invisible"
            android:text="@string/default_value"/>

        <TextView
            android:id="@+id/label_deduct_total"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_sales_tax"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:text="@string/calculator_total"/>

        <TextView
            android:id="@+id/textview_deduct_total"
            style="@style/CalculatorSub"
            android:layout_below="@id/label_deduct_sales_tax"
            android:layout_marginLeft="126dp"
            android:layout_marginStart="126dp"
            android:layout_toEndOf="@id/label_deduct_total"
            android:layout_toRightOf="@id/label_deduct_total"
            android:visibility="invisible"
            android:text="@string/default_value"/>

<!-- ======================================================== -->

        <View
            android:id="@+id/calc_divider9"
            style="@style/Divider2"
            android:layout_below="@id/label_deduct_total"/>

        <TextView
            android:id="@+id/label_gain_loss_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider9"
            android:text="@string/calculator_gain_loss_amount"/>

        <TextView
            android:id="@+id/textview_gain_loss_amount"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider9"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/label_gain_loss_amount"
            android:layout_toRightOf="@id/label_gain_loss_amount"
            android:text="@string/default_value"/>

        <View
            android:id="@+id/calc_divider10"
            style="@style/Divider2"
            android:layout_below="@id/label_gain_loss_amount"/>

        <TextView
            android:id="@+id/label_gain_loss_percent"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider10"
            android:text="@string/calculator_gain_loss_percent"/>

        <TextView
            android:id="@+id/textview_gain_loss_percent"
            style="@style/Calculator"
            android:layout_below="@id/calc_divider10"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:layout_toEndOf="@id/label_gain_loss_percent"
            android:layout_toRightOf="@id/label_gain_loss_percent"
            android:text="@string/default_value_percent"/>

        <View
            android:id="@android:id/empty"
            style="@style/Divider2"
            android:layout_below="@id/label_gain_loss_percent"/>
    </RelativeLayout>
</ScrollView>